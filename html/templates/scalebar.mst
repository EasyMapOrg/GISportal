{{#if units}}<p>Scale - {{units}}</p>{{/if}}
<div class="scalebar-outer {{#if log}}scalebar-log{{else}}scalebar-linear{{/if}} ">
	<div class="scalebar" style="background-image: url('{{rotate_image legend 90}}')"></div>
	{{#scalePoints}}
		<span class="scalebar-overlay"><span title="{{.}}">{{.}}</span></span>
	{{/scalePoints}}
</div>